   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Text>
      <TextField fx:id="textFieldEmailRecover" maxHeight="-Infinity" maxWidth="-Infinity" promptText="Escribir Email" />
      <Button fx:id="buttonRegistrarEmail" mnemonicParsing="false" onAction="#onRecoverButtonClick" text="Aceptar" />
      <Text fx:id="textFieldMensajeRecover" strokeType="OUTSIDE" strokeWidth="0.0" />
   </children>
</VBox>
